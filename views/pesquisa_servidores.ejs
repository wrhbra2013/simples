<form action="/pesquisa_servidores"  method="post">
	<div class="pesquisa">
		<br>
		<h1> INFORMAÇÕES RÁPIDAS.</h1>
		<br>
		<label>Pesquisa</label>
		<input type="text" name="form_busca" id="form_busca"/>
		<br>
		<br>
		<button type="submit"   class="btn" id="btn_busca" name ="btn_busca" onclick="pesquisa()"> Pesquisar </button>  
		
		<br>
		<br>
		<hr>
		<table  id="servidores">
			<tr> 
			<td>Matricula</td>
			<td>Nome</td>
			<td>Cargo</td>
			<td>Telefone</td>
			<td>Email</td> 
			</tr>
			<!-- Variaveis EJS-->
			<% var servidores; %>
				<% servidores.forEach(servidores => { %>
					<tr>
					<td> <%= servidores.Matricula %></td>
					<td><%= servidores.Nome %> </td>
					<td><%= servidores.Cargo %></td>
					<td><%= servidores.Telefone %></td>
					<td> <%= servidores.Email %></td>
				</tr>
				<% }) %>
				
			
		</table>

	</div>
  
</form>

	
			
		
	



	
